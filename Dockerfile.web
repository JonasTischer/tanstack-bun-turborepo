# syntax=docker/dockerfile:1

FROM oven/bun:1 AS base

# Prune the monorepo to only include web and its dependencies
FROM base AS pruner
WORKDIR /app
RUN bun install -g turbo
COPY . .
RUN turbo prune @whispa/web --docker

# Install all dependencies (needed for build)
FROM base AS installer
WORKDIR /app

# Copy pruned lockfile and package.json files
COPY --from=pruner /app/out/json/ .
RUN bun install --frozen-lockfile

# Copy pruned source code
COPY --from=pruner /app/out/full/ .

# Copy typescript-config (not included in prune but needed for builds)
COPY packages/typescript-config ./packages/typescript-config

RUN bun run build --filter=@whispa/web

# Install production dependencies only
FROM base AS prod-deps
WORKDIR /app
COPY --from=pruner /app/out/json/ .
RUN bun install --frozen-lockfile --production

# Final runner stage
FROM base AS runner
WORKDIR /app
ENV NODE_ENV=production
ENV HOST=0.0.0.0
ENV PORT=3000

# Copy built output and production dependencies
COPY --from=installer /app/apps/web/.output ./.output
COPY --from=prod-deps /app/node_modules ./node_modules

EXPOSE 3000
CMD ["bun", "run", ".output/server/index.mjs"]
