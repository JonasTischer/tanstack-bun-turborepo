{
  "name": "whispa",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "better-auth": "^1.3.28",
      "dotenv": "^17.2.2",
      "zod": "^4.1.11",
      "typescript": "^5.8.2",
      "tsdown": "^0.15.5",
      "react": "19.1.0",
      "react-dom": "19.1.0"
    }
  },
  "scripts": {
    "check": "biome check --write .",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "test": "turbo test",
    "lint": "biome check --write .",
    "format": "biome format --write .",
    "prepare": "[ -d .git ] && lefthook install || echo 'Skipping lefthook'",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @whispa/db db:push",
    "db:studio": "turbo -F @whispa/db db:studio",
    "db:generate": "turbo -F @whispa/db db:generate",
    "db:migrate": "turbo -F @whispa/db db:migrate",
    "db:start": "turbo -F @whispa/db db:start",
    "db:watch": "turbo -F @whispa/db db:watch",
    "db:stop": "turbo -F @whispa/db db:stop",
    "db:down": "turbo -F @whispa/db db:down"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "turbo": "^2.5.4",
    "@biomejs/biome": "2.3.5",
    "lefthook": "^1.10.1",
    "ultracite": "6.3.3",
    "tsdown": "^0.15.5",
    "@types/bun": "^1.2.6"
  },
  "packageManager": "bun@1.3.0"
}
